{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "/Users/bigbootylover/workspace/snake/snake.c", 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lraylib",
                "-L/opt/homebrew/opt/raylib/lib",
                "-I/opt/homebrew/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}